extends layout

block content
  h1= title
  if show 
    form(method="post") 
      p Jaka jest Twoja ulubiona pora roku ?
      ul 
        each item in data 
          li 
            label=item.title
            input(type="radio", name="quiz", value=item._id)
      input(type="submit", value="Zagłosuj")
      p Aby zoboczyć wyniki oddaj głos
  else 
    h1 Już zagłosowałeś w ankiecie
    p Wyniki ankiety 
    ul
    each item in data 
      li #{item.title} ilość głosów :  #{item.vote} (#{Math.round(item.vote/sum*100)}%)

  p Oddano głosów : #{sum}

